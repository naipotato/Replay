{
  "app-id" : "com.github.nahuelwexd.Replay.Devel",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "master",
  "sdk" : "org.gnome.Sdk",
  "command" : "replay",
  "finish-args" : [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=ipc",
    "--share=network",
    "--device=dri"
  ],
  "cleanup" : [
    "/bin/gda-test-connection-5.0",
    "/bin/gdaui-demo-5.0",
    "/bin/intltool-extract",
    "/bin/intltoolize",
    "/bin/intltool-merge",
    "/bin/intltool-prepare",
    "/bin/intltool-update",
    "/bin/sassc",
    "/cache",
    "/etc",
    "/include",
    "/lib/debug",
    "/lib/girepository-1.0",
    "/lib/pkgconfig",
    "/lib/libsass*",
    "/lib/*.la",
    "/share/aclocal",
    "/share/gir-1.0",
    "/share/gtk-doc",
    "/share/intltool",
    "/share/man",
    "/share/vala"
  ],
  "modules" : [
    {
      "name" : "libsass",
      "buildsystem" : "simple",
      "build-commands" : [
        "autoreconf --force --install",
        "./configure --disable-tests --disable-static --enable-shared --prefix=/app",
        "make -j5 install"
      ],
      "sources" : [
        {
          "type" : "git",
          "url" : "https://github.com/sass/libsass.git"
        }
      ]
    },
    {
      "name" : "sassc",
      "buildsystem" : "simple",
      "build-commands" : [
        "autoreconf --force --install",
        "./configure --prefix=/app",
        "make -j5 install"
      ],
      "sources" : [
        {
          "type" : "git",
          "url" : "https://github.com/sass/sassc.git"
        }
      ]
    },
    {
      "name" : "intltool",
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://launchpad.net/intltool/trunk/0.51.0/+download/intltool-0.51.0.tar.gz",
          "md5" : "12e517cac2b57a0121cda351570f1e63"
        }
      ]
    },
    {
      "name" : "libgda",
      "config-opts" : [
        "--disable-tools",
        "--enable-vala",
        "--enable-system-sqlite",
        "--disable-gtk-doc-html"
      ],
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://download.gnome.org/sources/libgda/5.2/libgda-5.2.9.tar.xz",
          "sha256" : "59caed8ca72b1ac6437c9844f0677f8a296d52cfd1c0049116026abfb1d87d9b"
        }
      ]
    },
    {
      "name" : "replay",
      "buildsystem" : "meson",
      "builddir" : true,
      "config-opts" : [
        "-Dprofile=development"
      ],
      "sources" : [
        {
          "type" : "dir",
          "path" : "../.."
        }
      ]
    }
  ]
}
