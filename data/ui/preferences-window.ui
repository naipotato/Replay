<interface>

  <requires lib="gtk+" version="3.24"/>

  <template class="UnitubePreferencesWindow" parent="HdyPreferencesWindow">

    <child>
      <object class="HdyPreferencesPage">

        <property name="visible">True</property>
        <property name="title" translatable="yes">Appearance</property>
        <property name="icon-name">settings-appearance-symbolic</property>

        <child>
          <object class="HdyPreferencesGroup">

            <property name="visible">True</property>

            <child>
              <object class="HdyActionRow" id="switch_row">

                <property name="visible">True</property>
                <property name="title" translatable="yes">Use dark theme</property>
                <property name="subtitle" translatable="yes">Activates dark theme on the app.</property>

                <child type="action">
                  <object class="GtkSwitch" id="toggle">
                    <property name="visible">True</property>
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
